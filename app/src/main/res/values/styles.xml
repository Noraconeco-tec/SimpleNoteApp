<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListCellSummaryTextView" parent="Theme.SimpleNoteApp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_list_cell_summary</item>
    </style>
    <style name="ListCellContentsTextView" parent="Theme.SimpleNoteApp">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/cell_contents_text_color</item>
        <item name="android:textSize">@dimen/text_size_list_cell_contents</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DetailSummaryTextView" parent="Theme.SimpleNoteApp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_detail_summary</item>
    </style>

    <style name="DetailContentsTextView" parent="Theme.SimpleNoteApp">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_detail_contents</item>
    </style>
</resources>